<aura:component >
    <aura:attribute name="boat" type="Boat__c" access="global"/>
    <aura:attribute name="selected" type="boolean" access="global" default="false" />
    <aura:registerEvent name="onBoatSelect" type="c:BoatSelect" description="component event for boat selected action"/>
    <aura:registerEvent name="boatselected" type="c:BoatSelected" description="Application event for boat selected action"/>
     <aura:registerEvent name="PlotMapMarker" type="c:PlotMapMarker" />
    <lightning:button class="{!v.selected ? 'tile selected' : 'tile' }" onclick="{!c.onBoatClick}">
        <div style="{!'background-image: url(' + v.boat.Picture__c + ')'}" class="innertile">
            <div class="lower-third">
                <h1 class="slds-truncate">{!v.boat.Contact__r.Name}</h1>
            </div>
        </div>
    </lightning:button>
</aura:component>